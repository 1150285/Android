
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Navigation">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video"
        android:id="@+id/switchVideo"
        android:checked="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="sensor value"
        android:id="@+id/accelaration"
        android:layout_alignBottom="@+id/imgButtonFront"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="214dp"
        android:layout_marginStart="214dp" />

    <ImageButton
        android:id="@+id/imgButtonFront"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/arrowup"
        android:layout_above="@+id/imgButtonRear"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="53dp" />

    <ImageButton
        android:id="@+id/imgButtonRear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/arrowdown"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="78dp" />

</RelativeLayout>



